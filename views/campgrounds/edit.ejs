<% layout('/layouts/boilerplate') %>
<div>
        <h1 class="text-center">Edit Campground - <%=camp.title%></h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=camp.id%>?_method=PUT" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Campground Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" value="<%=camp.title%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Campground Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" value="<%=camp.location%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" value="<%=camp.image%>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label"  name="campground[price]" value="<%=camp.price%>" required>
                  </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Campground Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" required><%=camp.description%></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info" type="submit">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%=camp.id%>">Back to Campground</a>
        </div>
    </div>