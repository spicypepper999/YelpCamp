<% layout('/layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-5">
                <img src="<%=camp.image%>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=camp.title%>
                    </h5>
                    <p class="card-text">
                        <%=camp.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%=camp.location%>
                    </li>
                    <li class="list-group-item text-muted">$<%=camp.price%>/night</li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-warning" href="/campgrounds/<%=camp.id%>/edit">Edit Campground</a>
                    <form class="d-inline" action="/campgrounds/<%=camp.id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger" type="submit">DELETE!</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a href="/campgrounds">Back to All Campgrounds</a>
                </div>
            </div>
        </div>
    </div>